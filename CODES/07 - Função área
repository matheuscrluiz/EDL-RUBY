output1 = "Escolha <1>QUADRADO ou <2>CIRCULO"
output2 = 'Qual o valor do lado ou do raio?'
 
def area(par1, par2)
    if par1 == 1
        par2 * par2
    else
        if par1 == 2
            par2 * par2 * 3.14159
        end
    end 
end
 
puts 'CALCULAR AREA'
 
puts output1
STDOUT.flush
arg1 = gets.chomp.to_i
 
puts output2
STDOUT.flush
arg2 = gets.chomp.to_i
 
puts("\nArea = " + area(arg1, arg2).to_s)
